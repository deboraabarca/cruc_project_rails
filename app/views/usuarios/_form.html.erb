<div class="form-container">
  <h1>Registrar Usuario</h1>

  <%= form_with(model: usuario) do |form| %>
    <% if usuario.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>
        <ul>
          <% usuario.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field-container">
      <%= form.label :nombre, class: "label" %>
      <%= form.text_field :nombre, placeholder: "Nombre", class: "input-field" %>
    </div>

    <div class="field-container">
      <%= form.label :email, class: "label" %>
      <%= form.text_field :email, placeholder: "Email", class: "input-field" %>
    </div>

    <div>
      <%= form.submit "Registrar", class: "btn-submit" %>
    </div>
  <% end %>

